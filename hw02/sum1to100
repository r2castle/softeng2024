def isEven(n): # 짝수인지 아닌지
    if n % 2 == 0:
        return True
    else:
        return False
    
def main(): # 1부터 100까지 짝수의 합 구하기
    total = 0

    # for i in range(1, 101): # 반복문
    #    if isEven(i):
    #       total += i
    
    total = sum([i for i in range(1, 101) if isEven(i)]) # 지능형리스트

    print(total)

if __name__ == "__main__":
    main()
